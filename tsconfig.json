// More info on TypeScript project references:
// https://www.typescriptlang.org/docs/handbook/project-references.html
{
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "composite": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "exclude": [
    "src/routers/TagCreator/form",
    "src/routers/Dashboard/app",
    "src/routers/Insights/dashboard",
    "src/routers/Search/dashboard"
  ]
}
